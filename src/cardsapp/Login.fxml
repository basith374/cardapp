<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import java.net.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" id="gridPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cardsapp.LoginController" styleClass="background">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="userFld" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField fx:id="passFld" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button text="Login" onAction="#onLogin" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="RIGHT" />
</GridPane>
